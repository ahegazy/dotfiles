#!/bin/bash

if [[ -z `pidof opera-vpn` ]]
then

    exec opera --user-data-dir="$HOME/.config/opera-vpn" --disk-cache-dir="$HOME/.cache/opera-vpn"
#    exec i3-msg 'workspace "5: B2"; exec opera --user-data-dir="$HOME/.config/opera-vpn" --disk-cache-dir="$HOME/.cache/opera-vpn"'

else

    exec i3-msg 'workspace "2: Browser"'
#    exec i3-msg 'workspace "5: B2"'
fi
