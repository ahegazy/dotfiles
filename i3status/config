# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = i3bar
        colors = true
        interval = 3
}

order += "read_file NETRATE"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
#order += "load"
order += "memory"
order += "cpu_usage"
order += "read_file BRIGHTNESS"
order += "volume master"
order += "tztime local"

wireless _first_ {
        
        format_up = "üåç(%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "üñß %ip"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "‚ö° CHR"
        status_bat = "üîã BAT"
        status_unk = "? UNK"
        status_full = "‚òª FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}
#battery all {
#        format = "%status %percentage %remaining"
#}

disk "/" {
        format = "üñ¥ %avail"
}

#load {
        #system load number of processes waiting for CPU time in the last 1, 5 and 15 minutes
#        format = "load: %1min"
#}

read_file NETRATE {
    format = "%content"
    path = "/home/ahmad/.config/netrate"
}
read_file BRIGHTNESS {
    format = "ÔÜÖ %content%"
    path = "/home/ahmad/.config/brightness"
    max_characters = 5
}
memory {
        format = "‚òµ %used"
        threshold_degraded = "20%"
        format_degraded = "MEMORY < %available"
}

cpu_usage {
    format="üß† %usage"
    max_threshold = 75
}

volume master {
        device = "pulse"
        format = "üîâ %volume"
        format_muted = "üîá muted (%volume)"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}


